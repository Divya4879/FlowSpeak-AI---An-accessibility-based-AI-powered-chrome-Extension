{
  "manifest_version": 3,
  "name": "AI Accessibility Reader",
  "description": "Advanced AI-powered screen reader with intelligent content analysis, site summaries, code explanations, and seamless navigation for AO3 and DEV.to",
  "version": "9.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Accessibility Reader"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://api.groq.com/*"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["content.css"],
    "run_at": "document_idle"
  }],
  "background": {
    "service_worker": "background.js"
  }
}
